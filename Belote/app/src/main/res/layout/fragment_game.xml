    <com.elkriefy.games.belote.ui.CardView
        android:id="@+id/opponentRightCard2"
        style="@style/opponent_right_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/opponentRightCard3" />

    <com.elkriefy.games.belote.ui.CardView
        android:id="@+id/opponentRightCard1"
        style="@style/opponent_right_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/opponentRightCard2" />

