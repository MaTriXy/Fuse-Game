        app:layout_constraintTop_toTopOf="@+id/opponentLeftCard7" />

    <!--...................................Opponent.top.Cards....................................-->

    <com.elkriefy.games.belote.ui.CardView
        android:id="@+id/opponentTopCard1"
        style="@style/opponent_top_card"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/opponentTopCard2"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elkriefy.games.belote.ui.CardView
        android:id="@+id/opponentTopCard2"
        style="@style/opponent_top_card"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/opponentTopCard1"
        app:layout_constraintRight_toLeftOf="@+id/opponentTopCard3"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elkriefy.games.belote.ui.CardView
        android:id="@+id/opponentTopCard3"
        style="@style/opponent_top_card"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/opponentTopCard2"
        app:layout_constraintRight_toLeftOf="@+id/opponentTopCard4"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elkriefy.games.belote.ui.CardView
        android:id="@+id/opponentTopCard4"
        style="@style/opponent_top_card"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/opponentTopCard3"
        app:layout_constraintRight_toLeftOf="@+id/opponentTopCard5"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elkriefy.games.belote.ui.CardView
        android:id="@+id/opponentTopCard5"
        style="@style/opponent_top_card"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/opponentTopCard4"
        app:layout_constraintRight_toLeftOf="@+id/opponentTopCard6"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elkriefy.games.belote.ui.CardView
        android:id="@+id/opponentTopCard6"
