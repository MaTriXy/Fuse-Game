    <!--...................................Opponent.right.Cards...................................-->

    <com.elkriefy.games.belote.ui.CardView
        android:id="@+id/opponentRightCard8"
        style="@style/opponent_right_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <com.elkriefy.games.belote.ui.CardView
        android:id="@+id/opponentRightCard7"
        style="@style/opponent_right_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/opponentRightCard8" />

    <com.elkriefy.games.belote.ui.CardView
        android:id="@+id/opponentRightCard6"
        style="@style/opponent_right_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/opponentRightCard7" />

    <com.elkriefy.games.belote.ui.CardView
        android:id="@+id/opponentRightCard5"
        style="@style/opponent_right_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/opponentRightCard6" />

    <com.elkriefy.games.belote.ui.CardView
        android:id="@+id/opponentRightCard4"
        style="@style/opponent_right_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/opponentRightCard5" />

    <com.elkriefy.games.belote.ui.CardView
        android:id="@+id/opponentRightCard3"
        style="@style/opponent_right_card"
        app:layout_constraintRight_toRightOf="parent"
